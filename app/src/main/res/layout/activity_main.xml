<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ise308.Homework.BerkayAltay17243610043.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView1ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/cardViewStartMargin"
            android:layout_marginEnd="@dimen/cardViewEndMargin"
            android:layout_marginTop="@dimen/cardViewTopMargin"
            app:cardCornerRadius="@dimen/cardViewCornerRadius"
            android:clipToPadding="true">
            <include layout="@layout/card_view_1"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/cardViewStartMargin"
            android:layout_marginEnd="@dimen/cardViewEndMargin"
            android:layout_marginTop="@dimen/cardViewTopMargin"
            app:cardCornerRadius="@dimen/cardViewCornerRadius"
            android:clipToPadding="true">
            <include layout="@layout/card_view_2"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView3ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/cardViewStartMargin"
            android:layout_marginEnd="@dimen/cardViewEndMargin"
            android:layout_marginTop="@dimen/cardViewTopMargin"
            app:cardCornerRadius="@dimen/cardViewCornerRadius"
            android:clipToPadding="true">
            <include layout="@layout/card_view_3"/>

        </androidx.cardview.widget.CardView>


    </LinearLayout>




</ScrollView>