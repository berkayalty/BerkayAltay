<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="false"
    android:orientation="vertical"
    android:background="@color/cardBackgroundColor">

    <TextView
        android:id="@+id/cardView1Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/cardsTitleMarginTop"
        android:text="@string/harleyFXDR114Title"
        android:textSize="@dimen/cardsTitleTextSize"
        android:textColor="@color/titleColor"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="@dimen/cardsImageMarginStartEnd"
        android:layout_marginTop="@dimen/cardsImageMarginTop"
        android:layout_marginEnd="@dimen/cardsImageMarginStartEnd"
        android:adjustViewBounds="true"
        android:src="@drawable/harleyfxdr114" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/horizontalLinearLayoutMarginTop">

        <ImageButton
            android:id="@+id/cardView2ImageButtonID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fav_asset_false"
            android:background="@android:color/transparent"
            android:layout_marginStart="@dimen/favButtonMarginStartEnd"
            android:layout_marginEnd="@dimen/favButtonMarginStartEnd"
            android:layout_weight="0.2"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/harleyMotorcycleBrand"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/motorcycleBrandTextSize"
            android:textColor="@color/titleColor"
            android:layout_weight="0.8"
            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/harleyFXDR114Description"
        android:textSize="@dimen/cardsDescriptionTextSize"
        android:layout_marginTop="@dimen/cardsDescriptionTextMarginTop"
        android:layout_marginStart="@dimen/cardsDescriptionTextMarginStartEnd"
        android:layout_marginEnd="@dimen/cardsDescriptionTextMarginStartEnd"
        android:padding="@dimen/cardsDescriptionTextPadding" />



</LinearLayout>